import hm.Application
import hm.Notice

model{
    Notice notice
}

json g.render(notice,{
    if(!notice.saved){
        publishedAt '未发布'
        modifiedAt '未发布'
    }
    if(notice.saved){
        publishedAtString Application.timeFormat.format(notice.publishedAt)
        modifiedAtString Application.timeFormat.format(notice.modifiedAt)
    }
    files(notice.content?.files)
    content(notice.content?.text)
})