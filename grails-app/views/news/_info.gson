import hm.Application
import hm.News

model{
    News news
}

json g.render(news,[excludes: ['content']]){
    if(!news.saved){
        publishedAt '未发布'
        modifiedAt '未发布'
    }
    if(news.saved){
        publishedAtString Application.timeFormat.format(news.publishedAt)
        modifiedAtString Application.timeFormat.format(news.modifiedAt)
    }
    //先加上，以后考虑留不留
    files(news.content?.files)
    content(news.content?.text)
}