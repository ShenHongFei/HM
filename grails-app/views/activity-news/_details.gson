import hm.Application
import hm.ActivityNews

model{
    ActivityNews activityNews
}

json g.render(activityNews,{
    if(!activityNews.saved){
        publishedAt '未发布'
        modifiedAt '未发布'
    }
    if(activityNews.saved){
        publishedAtString Application.timeFormat.format(activityNews.publishedAt)
        modifiedAtString Application.timeFormat.format(activityNews.modifiedAt)
    }
    files(activityNews.content?.files)
    content(activityNews.content?.text)
})