import hm.Application
import hm.Activity

model{
    Activity activity
}

json g.render(activity,{
    if(!activity.saved){
        publishedAt '未发布'
        modifiedAt '未发布'
    }
    if(activity.saved){
        publishedAtString Application.timeFormat.format(activity.publishedAt)
        modifiedAtString Application.timeFormat.format(activity.modifiedAt)
    }
    files(activity.content?.files)
    content(activity.content?.text)
})